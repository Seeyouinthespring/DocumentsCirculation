@model DocumentsCirculation.Models.DocumentSale

@{
    ViewBag.Title = "DocSaleEdit";
}

<h2>Редактирование документа продажи</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Документ продажи</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.documentID)

    <p>Редактирование документа с номером: @Html.DisplayFor(model => model.documentID)</p>

    <div class="form-group">
        <p>Название документа</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Дата создания</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.creationdate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.creationdate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>ID автора</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.authorID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.authorID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Комментарий</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.comment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Хранить до</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.shelflife, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.shelflife, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>ID подписывающего</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.signerID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.signerID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Тип</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.documentsaleID)

    <div class="form-group">
        <p>Название продукции</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.productname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.productname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Количество</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.productammount_num, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.productammount_num, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>Цена за штуку</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.productprice_for_one, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.productprice_for_one, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>ID покупателя</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.buyerID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.buyerID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад", "DocSaleIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
